<%= form_for(@photo) do |f| %>

  <div class="row">
    <div class='form-group'>
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
  </div>
  <div class="row">
    <div class='form-group'>
      <%= f.label :caption %>
      <%= f.text_field :caption %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <%= f.submit class: "btn btn-success" %>
<% end %>
