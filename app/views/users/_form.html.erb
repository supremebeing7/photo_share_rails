<%= form_for(@user) do |f| %>
  <div class="row">
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class='form-group'>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="row">
    <div class='form-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class='form-group'>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <%= f.submit "Sign Up", class: "btn btn-success" %>
<% end %>
